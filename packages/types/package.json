{
  "name": "@tokenizk/types",
  "private": true,
  "description": "common types for tokenizk-Network",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "lib:dev": "npm run lib:build && (concurrently \"tsc --build tsconfig.json --watch\" \"tsc-alias -w\")",
    "lib:gen-schema": "npm run gen-schema-sale-req  && npm run gen-schema-presale-dto && npm run gen-schema-fairsale-dto && npm run gen-schema-fairsale-user-dto && npm run gen-schema-presale-user-dto",
    "lib:build": "npm run lib:clean && npm run lib:gen-schema && tsc --build tsconfig.json && tsc-alias",
    "lib:clean": "rimraf ./dist ./dist_es ./tsconfig.es.tsbuildinfo ./tsconfig.tsbuildinfo",
    "lib:lint": "eslint \"src/**/*.ts\" --fix",
    "gen-schema-sale-req": "npx typescript-json-schema --refs false ./src/sale-req.ts SaleReq -o ./src/sale-req-schema.json",
    "gen-schema-presale-dto": "npx typescript-json-schema --refs false ./src/presale-dto.ts PresaleDto -o ./src/presale-dto-schema.json",
    "gen-schema-fairsale-dto": "npx typescript-json-schema --refs false ./src/fairsale-dto.ts FairsaleDto -o ./src/fairsale-dto-schema.json",
    "gen-schema-fairsale-user-dto": "npx typescript-json-schema --refs false ./src/fairsale-user-dto.ts FairsaleUserDto -o ./src/fairsale-user-dto-schema.json",
    "gen-schema-presale-user-dto": "npx typescript-json-schema --refs false ./src/presale-user-dto.ts PresaleUserDto -o ./src/presale-user-dto-schema.json"

  },
  "peerDependencies": {
    "o1js": "0.15.1"
  }
}
